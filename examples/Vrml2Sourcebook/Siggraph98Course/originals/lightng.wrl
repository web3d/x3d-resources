WorldInfo {
	title "Lightening bolt"
	info [ "Copyright (c) 1997, Andrea L. Ames, David R. Nadeau, John L. Moreland" ]
}

Viewpoint {
	position 3.5 4.5 15.0
	description "Entry view"
}
NavigationInfo {
	type [ "EXAMINE", "ANY" ]
	headlight TRUE
}
Shape {
	appearance Appearance {
		material Material {
			diffuseColor 1.0 1.0 0.0
		}
	}
	geometry IndexedFaceSet {
		coord Coordinate {
			point [
			# Lighting bolt tip
				0.0  0.0  0.0,
			# Front perimeter
				5.5  5.0  0.88,
				4.0  5.5  0.968,
				7.0  8.0  1.408,
				4.0  9.0  1.584,
				1.0  5.0  0.88,
				2.5  4.5  0.792,
			# Back perimeter
				5.5  5.0 -0.88,
				4.0  5.5 -0.968,
				7.0  8.0 -1.408,
				4.0  9.0 -1.584,
				1.0  5.0 -0.88,
				2.5  4.5 -0.792,
			]
		}
		coordIndex [
		# Front
			0,  1,  2,  3,  4,  5,  6, -1,
		# Back
			0, 12, 11, 10,  9,  8,  7, -1,
		# Sides
			0,  7,  1, -1,
			1,  7,  8,  2, -1,
			2,  8,  9,  3, -1,
			3,  9, 10,  4, -1,
			4, 10, 11,  5, -1,
			5, 11, 12,  6, -1,
			6, 12,  0, -1,
		]
		creaseAngle 0.0
		convex FALSE
		solid TRUE
		colorPerVertex TRUE
		ccw TRUE
	}
}
