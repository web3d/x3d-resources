        Shape {
            appearance USE White
            geometry IndexedFaceSet {
                coord DEF Crd2 Coordinate {
                    point [
                        # Front edge
                        0.0  0.0  1.0, # Bottom
                        0.0  1.0  1.0, # Middle
                        0.0  2.0  1.0, # Top
                        # Back edge
                        0.0  2.0 -1.0, # Top
                        0.0  1.0 -1.0, # Middle
