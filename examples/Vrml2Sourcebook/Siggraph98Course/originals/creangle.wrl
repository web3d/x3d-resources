# Panel 3
Transform {
    translation +1.1 0.0 0.0
    children [
        Shape {
            appearance USE White
            geometry IndexedFaceSet {
                coord DEF Crd3 Coordinate {
                    point [
                        # Front edge
                        0.0  0.0  1.0, # Bottom
                        0.0  1.0  1.0, # Middle
                        0.0  2.0  1.0, # Top
                        # Back edge
                        0.0  2.0 -1.0, # Top
                        0.0  1.0 -1.0, # Middle
                        0.0  0.0 -1.0, # Bottom
                    ]
                }
                coordIndex [
                    0, 1, 4, 5, 0, -1,
                    1, 2, 3, 4, 1, -1,
                ]
                creaseAngle 1.57
                solid FALSE
            }
        }
        Transform {
            translation 0.0 1.0 1.2
            children [
                Billboard {
#                    axisOfRotation 0.0 0.0 0.0
                    children [
