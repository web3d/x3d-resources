  <Scene>
    <WorldInfo title='test_viewpointonly.x3d'/>
    <NavigationInfo type='"EXAMINE" "WALK" "FLY" "ANY"'/>
    <Viewpoint DEF='view1' description='Initial viewpoint' position='0 0 15'/>
    <Viewpoint DEF='view2' description='Referenced viewpoint' position='0 0 25'/>
    <Anchor description='URL with viewpoint name only' url='"#view2"'>
      <Shape>
        <Appearance>
          <Material diffuseColor='1 0 0' emissiveColor='1 0 0'/>
        </Appearance>
        <Text string='"Please click here to change" "the viewpoint of this text" "to 0 0 25"'>
          <FontStyle justify='"MIDDLE" "MIDDLE"'/>
        </Text>
      </Shape>
    </Anchor>
  </Scene>
